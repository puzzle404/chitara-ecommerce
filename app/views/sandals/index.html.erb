<div class="container-md">
  <div class="d-flex mt-5" style="width:100%">
    <div class="row">
    <% @sandals.each do |sandal| %>
      <div class="rounded-card card card2 m-2  px-0 shadow" style="width: 18rem;">
      <%  if sandal.photo.key == nil  %>
      <% else %>
        <%= cl_image_tag sandal.photo.key  , style: 'min-height:300px;crop:fill;max-height:300px;', class: 'image-border-top;' %>
      <% end %>
        <div class="card-body">
          <h5 class="card-title">Model: <%= sandal.model %></h5>
          <p class="card-text">Unit price of <%= number_to_currency(sandal.price) %></p>
          <p>Description: <%= sandal.description %></p>
          <p>
            <%= link_to "Edit", edit_sandal_path(sandal) %> |
            <%= link_to "Delete", sandal_path(sandal), method: :delete, data: {confirm: "Are you sure?"} %>
            <%= button_to "Add #{sandal.model} to cart", order_items_path(sandal_id: sandal.id), :class =>'btn btn-primary mx-auto px-5 align-center ', :style => "width:100%" %>
          </p>
        </div>
      </div>
    <% end %>
    </div>
  </div>
  <%= link_to "New sandal", new_sandal_path %>
</div>
