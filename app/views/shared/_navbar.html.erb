            <%# <%= link_to "Mi carrito", cart_path, class: "nav-link" %>
          </li>
          <li>
            <%= link_to "Productos", sandals_path, class: "nav-link" %>
          </li>
          <li>
            <%= link_to "Subir producto", new_sandal_path, class: "nav-link" %>
          </li>
          <li class="nav-item active">
            <%= link_to "Home", root_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Mensajes", "#", class: "nav-link" %>
          </li>
          <li class="nav-item dropdown">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
